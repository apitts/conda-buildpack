# determine Python version

# default python version is 2
PYTHON_VERSION="2"

if [ -f runtime.txt ]; then
    PYTHON_RUNTIME=$(cat runtime.txt)
    PYTHON_VERSION=`echo $PYTHON_RUNTIME | cut -d \- -f 2 | cut -d . -f 1`    
fi

if [ ! -d /app/.heroku/miniconda ]; then
    puts-step "Preparing Python/Miniconda Environment"
    bash_script="Miniconda${PYTHON_VERSION}-latest-Linux-x86_64.sh"
    command="curl -Os https://repo.continuum.io/miniconda/${bash_script}"
    eval $command
    command="chmod +x ${bash_script}"
    eval $command
    command="${bash_script} -p /app/.heroku/miniconda/ -b | indent"
    eval $command
    command="rm -fr ${bash_script}"
    eval $command
    
    conda install pip --yes | indent
fi

echo "nomkl" > $HOME/.heroku/miniconda/conda-meta/pinned
echo "added pinned file in $HOME/.heroku/miniconda/conda-meta/pinned"
conda install nomkl --yes


if [ -f conda-requirements.txt ]; then
    puts-step "Installing dependencies using Conda"
    conda install --no-deps --file conda-requirements.txt --yes | indent
fi

if [ -f requirements.txt ]; then
    puts-step "Installing dependencies using Pip"
    pip install -r requirements.txt  --exists-action=w --allow-all-external | indent
fi

# Clean up the installation environment .
conda clean -pt --yes > /dev/null
